<?xml version="1.0" encoding="UTF-8"?>
<nifty>
    <screen id="start" controller="FadeController">
        <layer id="layer" backgroundColor="#00000000" childLayout="center">
            <panel id="panel" height="100%" width="100%" align="center" valign="center"
            backgroundColor="#000000FF" childLayout="center" visibleToMouse="false">
                <interact onClick="clickThing()"/>
                <effect>
                    <onStartScreen name="fade" start="#ff" end="#00"
                    length="3000" startDelay="2000" neverStopRendering="true"/>
                    <onEndScreen name="fade" start="#00" end="#ff"
                    length="3000" startDelay="000" />
                </effect>
            </panel>
        </layer>
    </screen>
    <screen id="other" controller="FadeController">
    <layer id="upperLayer" childLayout="center">
        <panel id="upperPanel" width="50%" height="100%" backgroundColor="#ff000030" childLayout="center">
            <panel id="upperAnotherPanel" width="100%" height="100%" childLayout="center">
                <label id="upperLabel" text="red:secondLayerPanel1" align="right"/>
            </panel>
        </panel>
    </layer>
  </screen>
</nifty>
